{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "jsx": "react-jsx",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "paths": {
            "~/*": ["./src/*"],
            "~assets/*": ["./assets/*"]
        },
        "rootDirs": ["."],
        "types": ["vite/client", "vitest"]
    },
    "extends": "./tsconfig.base.json",
    "include": ["eslint.config.mjs", "vite.config.ts", "src/"]
}
